# ============================================
# CASINO ROUTER - CONFIGURATION EXEMPLE
# ============================================

# Base de données PostgreSQL
DATABASE_URL=postgresql://casino_user:CHANGEZ_CE_MOT_DE_PASSE@postgres:5432/casino_router

# Configuration du moteur de performance
LAST_N_CLICKS=100
EXPLORATION_RATE=0.20
CRON_INTERVAL_MINUTES=10

# Sécurité - Secret partagé pour les postbacks
# Générer avec : openssl rand -base64 32
SHARED_POSTBACK_SECRET=changez-moi-secret-minimum-32-caracteres-aleatoires

# Authentification Admin
# Générer avec : openssl rand -base64 32
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changez-moi-password-securise-minimum-16-caracteres

# Serveur
HOST=0.0.0.0
PORT=5000

# Environnement (development / production)
ENVIRONMENT=development

# Rate Limiting (requêtes par minute)
RATE_LIMIT_CLICK=100
RATE_LIMIT_POSTBACK=200






